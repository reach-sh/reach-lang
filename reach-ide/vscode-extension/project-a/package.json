{
	"name": "reach-ide",
	"displayName": "Reach IDE (Experimental)",
	"description": "IDE for the Reach DApp programming language",
	"author": "Eric Lau",
	"license": "EPL-2.0",
	"version": "0.0.1",
	"preview": true,
	"icon": "images/logo.png",
	"repository": {
		"type": "git",
		"url": "https://github.com/ericglau/reach-ide"
	},
	"publisher": "ericglau",
	"categories": [],
	"keywords": [
		"ethereum", "reach"
	],
	"engines": {
		"vscode": "^1.43.0"
	},
	"activationEvents": [
		"workspaceContains:**/*.rsh",
		"onCommand:reach.compile",
		"onCommand:reach.run",
		"onCommand:reach.update",
		"onCommand:reach.get.eth.abi",
		"onCommand:reach.get.eth.bytecode"
	],
	"main": "./client/out/extension",
	"contributes": {
		"configuration": {
			"type": "object",
			"title": "Reach IDE",
			"properties": {
				"reachide.maxNumberOfProblems": {
					"scope": "resource",
					"type": "number",
					"default": 100,
					"description": "Controls the maximum number of problems produced by the server."
				},
				"reachide.trace.server": {
					"scope": "window",
					"type": "string",
					"enum": [
						"off",
						"messages",
						"verbose"
					],
					"default": "off",
					"description": "Traces the communication between VS Code and the Reach IDE language server."
				}
			}
		},
		"menus": {
			"explorer/context": [ 
				{
					"command": "reach.compile"
				},
				{
					"command": "reach.run"
				},
				{
					"command": "reach.get.eth.abi"
				},
				{
					"command": "reach.get.eth.bytecode"
				}
			],
			"touchBar": [
				{
					"command": "reach.compile"
				},
				{
					"command": "reach.run"
				},
				{
					"command": "reach.get.eth.abi"
				},
				{
					"command": "reach.get.eth.bytecode"
				}
			],
			"editor/context": [ 
				{
					"command": "reach.compile"
				},
				{
					"command": "reach.run"
				},
				{
					"command": "reach.get.eth.abi"
				},
				{
					"command": "reach.get.eth.bytecode"
				}
			]
		},
		"commands": [
			{
				"command": "reach.compile",
				"category": "Reach IDE",
				"title": "Compile Reach program"
			},
			{
				"command": "reach.run",
				"category": "Reach IDE",
				"title": "Run Reach program"
			},
			{
				"command": "reach.get.eth.abi",
				"category": "Reach IDE",
				"title": "Copy Ethereum contract ABI to clipboard"
			},
			{
				"command": "reach.get.eth.bytecode",
				"category": "Reach IDE",
				"title": "Copy Ethereum contract bytecode to clipboard"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -b",
		"watch": "tsc -b -w",
		"postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
		"test": "sh ./scripts/e2e.sh"
	},
	"devDependencies": {
		"@types/mocha": "^5.2.7",
		"mocha": "^6.2.2",
		"@types/node": "^12.12.0",
		"eslint": "^6.4.0",
		"@typescript-eslint/parser": "^2.3.0",
		"typescript": "^3.8.3"
	}
}
